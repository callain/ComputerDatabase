<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Computer Database</display-name>
  	
  	<servlet>
		<description>ComputersServlet</description>
		<display-name>ComputersServlet</display-name>
		<servlet-name>ComputersServlet</servlet-name>
		<servlet-class>com.excilys.computerdatabase.servlet.ComputersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ComputersServlet</servlet-name>
		<url-pattern>/computers</url-pattern>
	</servlet-mapping>
	
  	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/computer</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
